generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String       @id @unique @default(uuid())
  email          String       @unique
  name           String
  registerDate   DateTime     @default(now())
  roles          Role[]       @relation("UserRoles")
  workoutHistory WorkoutDay[] @relation("WorkoutDays")
}

model Role {
  id     String @id @unique @default(uuid())
  name   String
  userId String
  User   User   @relation("UserRoles", fields: [userId], references: [id])
}

model WorkoutDay {
  id         String  @id @unique @default(uuid())
  didWorkout Boolean
  user       User    @relation("WorkoutDays", fields: [userId], references: [id])
  userId     String  @unique
}

model RW_DataMigration {
  version    String   @id
  name       String
  startedAt  DateTime
  finishedAt DateTime
}
