datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Define your own datamodels here and run `yarn redwood prisma migrate dev`
model User {
  id             String          @unique @default(uuid())
  email          String          @unique
  name           String
  registerDate   DateTime        @default(now())
  roles          Role[]          @relation(name: "UserRoles")
  workoutHistory WorkoutHistory? @relation("WorkoutHistory")
}

model Role {
  id     String @id @unique @default(uuid())
  name   String
  User   User?  @relation(name: "UserRoles", fields: [userId], references: [id])
  userId String
}

model WorkoutHistory {
  id          String       @unique @default(uuid())
  user        User         @relation(name: "WorkoutHistory", fields: [userId], references: [id])
  userId      String
  workoutDays WorkoutDay[] @relation("WorkoutDays")
}

model WorkoutDay {
  id               String          @unique @default(uuid())
  WorkoutHistory   WorkoutHistory? @relation("WorkoutDays", fields: [workoutHistoryId], references: [id])
  workoutHistoryId String?
}

model RW_DataMigration {
  version    String   @id
  name       String
  startedAt  DateTime
  finishedAt DateTime
}
