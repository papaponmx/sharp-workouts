generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @unique @default(uuid())
  email          String          @unique
  name           String
  registerDate   DateTime        @default(now())
  roles          Role[]          @relation("UserRoles")
  workoutHistory WorkoutHistory? @relation("WorkoutHistory")
}

model Role {
  id     String @id @unique @default(uuid())
  name   String
  userId String
  User   User   @relation("UserRoles", fields: [userId], references: [id])
}

model WorkoutHistory {
  id          String       @unique @default(uuid())
  userId      String       @unique
  user        User         @relation("WorkoutHistory", fields: [userId], references: [id])
  workoutDays WorkoutDay[] @relation("WorkoutDays")
}

model WorkoutDay {
  id               String          @unique @default(uuid())
  workoutHistoryId String?
  WorkoutHistory   WorkoutHistory? @relation("WorkoutDays", fields: [workoutHistoryId], references: [id])
}

model RW_DataMigration {
  version    String   @id
  name       String
  startedAt  DateTime
  finishedAt DateTime
}
